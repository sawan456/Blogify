<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <style>


      .container {
        position: relative;
        text-align: center;
      }
      .centered {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
      }
      .centered h1{
        background-color: rgb(147, 46, 147);
        border-radius: 6px;
        color: white;
        font-size: 4rem;
        font-weight: 700;
      }
      .centered p{
        font-size: 2rem;
        font-style: italic;
        background-color: black;
        color: white;
      }
      </style>
    <title>Blogify</title>
</head>
<body style="background-color: black;">
    

    <!-- Start -->
    
    <%- include('./partials/nav') %>
    
    <!-- End -->

    <% if (blogs.length === 0) { %>

    <div class="container mt-3">
      <img src="/image/viewImg.jpg" alt="Snow" style="width:100%;opacity: 0.5;">
      <div class="centered">
        <h1>Welcome to Blogify</h1>
        <p>Write Your First Blog....</p>
      </div>
    </div>

    <% } else { %>

    <div class="container" style="padding-bottom: 4rem;">
      <div class="row row-cols-4">
        <% blogs.forEach(blog => { %>
        <div class="col" style="margin-top: 4rem;">
          <div class="card col" >
            <img src="<%= blog.coverImageURL %>" class="card-img-top" style="width: 100%; height: 14rem;" />
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary" style="width: 100%;height: 4rem;display: flex;justify-content: center;align-items: center;font-size: 1.5rem;color: rgb(53, 174, 53);background-color: white;border: 1px solid rgb(53, 174, 53);font-weight: 700;">View Blog</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <% } %>

    <%- include('./partials/scripts') %>
</body>
</html>